---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Dirk Hierold",
      url: "https://dirkhierold.de/about"
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Dirk Hierold",
      logo: {
        "@type": "ImageObject",
        url: "https://dirkhierold.de/dirk-avatar.jpg"
      }
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url
    },
    image: data.ogImage || "https://dirkhierold.de/dirk-avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Dirk Hierold",
    url: "https://dirkhierold.de",
    image: "https://dirkhierold.de/dirk-avatar.jpg",
    sameAs: [
      "https://github.com/DirkHierold",
      "https://twitter.com/DirkHierold",
      "https://bsky.app/profile/dirkhierold.de"
    ],
    jobTitle: "Software Engineer",
    description: "AI-powered tools from Swift roots to web frontiers. Every commit lands on GitHub for you to fork & remix."
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Dirk Hierold",
    url: "https://dirkhierold.de",
    description: "AI-powered tools from Swift roots to web frontiers. Every commit lands on GitHub for you to fork & remix.",
    author: {
      "@type": "Person",
      name: "Dirk Hierold"
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://dirkhierold.de/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />