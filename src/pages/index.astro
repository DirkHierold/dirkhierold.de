---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Hr from "@/components/Hr.astro";
import StructuredData from "@/components/StructuredData.astro";
import { SOCIALS } from "@/config";
---

<Layout description="Dirk Hierold: AI-powered tools from Swift roots to web frontiers. Every commit lands on GitHub for you to fork & remix.">
  <StructuredData type="WebSite" data={{}} />
  <StructuredData type="Person" data={{}} />
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-6 pb-4">
      <div class="flex flex-col sm:flex-row items-start gap-4">
        <a href="/about" class="block mx-auto sm:mx-0 group">
          <img
            src="/dirk-avatar.jpg"
            alt="Dirk Hierold"
            class="w-40 h-40 rounded-full object-cover flex-shrink-0 transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl"
          />
        </a>
        <div class="flex-1 text-center sm:text-left">
          <div class="flex items-center gap-2 justify-center sm:justify-start">
            <h1 class="my-2 inline-block text-2xl font-bold sm:my-4 sm:text-3xl">
              Hi, I'm Dirk.
            </h1>
          </div>
          <p>
            Game developer and AI enthusiast. Father of two sons, passionate about continuous learning and personal growth.<br />
            Every commit lands on GitHub for you to fork & remix.
          </p>
          {
            // only display if at least one social link is enabled
            SOCIALS.filter((social) => social.active).length > 0 && (
              <div class="mt-4 flex flex-row items-center justify-center sm:justify-start">
                <Socials />
              </div>
            )
          }
        </div>
      </div>
    </section>

    <Hr />

    <section id="explore" class="pt-12 pb-12">
      <h2 class="text-2xl font-semibold tracking-wide mb-8 text-center">Explore My Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <!-- Chess Button -->
        <a
          href="https://chess.dirkhierold.de"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 p-8 text-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:-translate-y-1"
        >
          <div class="relative z-10">
            <div class="mb-4 text-5xl">‚ôüÔ∏è</div>
            <h3 class="text-2xl font-bold mb-2">Chess</h3>
            <p class="text-amber-100 text-sm">Master chess openings with spaced repetition</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>

        <!-- Games Button -->
        <a
          href="https://games.dirkhierold.de"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-purple-500 to-indigo-600 p-8 text-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:-translate-y-1"
        >
          <div class="relative z-10">
            <div class="mb-4 text-5xl">üéÆ</div>
            <h3 class="text-2xl font-bold mb-2">Games</h3>
            <p class="text-purple-100 text-sm">Collection of interactive browser games</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>

        <!-- Math Button -->
        <a
          href="https://math.dirkhierold.de"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 p-8 text-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:-translate-y-1"
        >
          <div class="relative z-10">
            <div class="mb-4 text-5xl">üìê</div>
            <h3 class="text-2xl font-bold mb-2">Math</h3>
            <p class="text-emerald-100 text-sm">Interactive mathematics learning platform</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>

        <!-- Music Button -->
        <a
          href="https://music.dirkhierold.de"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-pink-500 to-rose-600 p-8 text-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:-translate-y-1"
        >
          <div class="relative z-10">
            <div class="mb-4 text-5xl">üéµ</div>
            <h3 class="text-2xl font-bold mb-2">Music</h3>
            <p class="text-pink-100 text-sm">Create and practice musical ideas</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
